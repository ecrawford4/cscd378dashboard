<script>

const allTheTimeZones = [
  "GMT", // 0 GMT
  "CET", // +1 GMT
  "EET",  // +2 GMT
  "MSK", // +3 GMT
  "SAMT", // +4 GMT
  "YEKT", // +5 GMT
  "OMST",   // +6 GMT
  "KRAT", // +7 GMT
  "CST", // +8 GMT
  "JST", // +9 GMT
  "VLAT", // +10 GMT
  "MAGT", // +11 GMT
  "PETT", // +12 GMT -12 GMT
  "SST", // +13 GMT -11 GMT
  "HST", // +14 GMT -10 GMT
  "AKST", // -9 GMT
  "PST", // -8 GMT
  "MST",  // -7 GMT
  "CST", // -6 GMT
  "EST", // -5 GMT
  "AST", // -4 GMT
  "HST", // placeholder -3 GMT
  "WGT", // -2 GMT
  "WET" // placeholder -1 GMT
]

/************
Dynamic Data
************/
// define `theClockApp` stored in function to be ran
const theClockApp = () => {
  
  // Get and store current date and time with `new Date()` object
  const timeNow = new Date();
  // Check-Check: See all `Date()` methods and properties
  // console.log( timeNow );
  
  // Get current hours
  let gotHours = timeNow.getHours();
  // Get current minutes
  let gotMinutes = timeNow.getMinutes();
  // Get current seconds
  let gotSeconds = timeNow.getSeconds();
  // Get current time zone
  let gotTimeZone = timeNow.getTimezoneOffset();
  
  // Check-Check: Is the data correct? 
  // console.log(gotHours, gotMinutes, gotSeconds);
  console.log(gotTimeZone);

  /************
  Format Data
  ************/
  // Get AM or PM
  const gotAmOrPM = gotHours >= 12 ? 'PM' : 'AM';
  // Get 12 hour format
  gotHours = gotHours % 12 || 12;
  // Optionally, append zero to single digit hours
  gotHours = gotHours < 10 ? `0${gotHours}` : gotHours   
  // Optionally, append zero to single digit minutes
  gotMinutes = gotMinutes < 10 ? `0${gotMinutes}` : gotMinutes;
  // Optionally, append zero to single digit seconds
  gotSeconds = gotSeconds < 10 ? `0${gotSeconds}` : gotSeconds;
  // Optionally, convert time zone to string
  const strTimeZone = gotTimeZone < 0 ? allTheTimeZones[gotTimeZone / 60] : allTheTimeZones[(gotTimeZone / 60) * 2];
  
  /************
  Get DOM Elements
  ************/
  // Get Hours
  const hours = document.querySelector(".hours");
  // Get minutes
  const minutes = document.querySelector(".minutes");
  // Get seconds
  const seconds = document.querySelector(".seconds");
  // Get AM or PM
  const amOrPM = document.querySelector('.amOrPM');
  // Time Zone
  const timeZone = document.querySelector('.timeZone');
  
  /************
  Set DOM Elements
  ************/
  // Set the hours
  hours.textContent = gotHours;
  // Set the minutes
  minutes.textContent = gotMinutes;
  // Set the seconds
  seconds.textContent = gotSeconds;
  // Set AM or PM
  amOrPM.textContent = gotAmOrPM;
  // Set Time Zone
  timeZone.textContent = strTimeZone;
    
  }
  
  /************
  Run App
  ************/
  // Re-run `theClockApp` every 1 second (1000 ms)
  setInterval(theClockApp, 1000);
</script>

<h1>current time:</h1>
<time>
  <p>
    <data class="hours">HH</data>:<data class="minutes">MM</data>:<data class="seconds">SS</data>
    <data class="amOrPM">AM/PM</data> <data class="timeZone">N/A</data>
  </p>
</time>
